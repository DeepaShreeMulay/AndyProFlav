<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvsalename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:gravity="left|center_vertical"
            android:layout_gravity="center_vertical"
            android:text="Customer Name"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#008000"/>

        <TextView
            android:id="@+id/tvsaleitem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:gravity="left|center_vertical"
            android:layout_gravity="center_vertical"
            android:text="Item Name"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="#008000"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relative_cart"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:visibility="visible">

            <ImageView
                android:id="@+id/button_product_add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_gravity="center|right"
                android:background="@drawable/ic_orderlist"/>

            <TextView
                android:id="@+id/textview_cart_count"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/circular_cart_count_background"
                android:gravity="center"
                android:text="99"
                android:textColor="@color/colorPrimary"
                android:textSize="10dp"
                android:textStyle="bold"
                android:visibility="visible" />
        </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvrcvdAmt"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="fill_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:gravity="left|center_vertical"
                android:layout_gravity="center_vertical"
                android:text="Quantity"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#008000"/>

            <EditText
                android:id="@+id/edt_salequantity"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="35dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:hint="Enter Quantity"
                android:gravity="left|center_vertical"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:paddingLeft="25dp"
                android:textSize="16dp"
                android:inputType="numberDecimal"
                android:background="@drawable/edt_border_transprtant_rect"
                android:layout_alignParentTop="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvrcvdwt"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="35dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:gravity="left|center_vertical"
                android:layout_gravity="center_vertical"
                android:text="Weight"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#008000"/>

            <EditText
                android:id="@+id/edt_salewt"
                android:layout_width="0dp"
                android:layout_weight="0.25"
                android:layout_height="35dp"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:hint="Enter Weight"
                android:gravity="left|center_vertical"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:paddingLeft="25dp"
                android:textSize="16dp"
                android:inputType="numberDecimal"
                android:background="@drawable/edt_border_transprtant_rect"
                android:layout_alignParentTop="true" />

            <Button
                android:id="@+id/btnsaleadd"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:gravity="center_vertical|center"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_weight="0.35"
                android:background="@drawable/edt_border_blue"
                android:text="Add weight"
                android:textColor="#fff" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvrcvdweightdet"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="fill_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:gravity="left|center_vertical"
                android:layout_gravity="center_vertical"
                android:text="Weight details"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#008000"/>

            <EditText
                android:id="@+id/edt_salewdarray"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="35dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:hint="Weights"
                android:gravity="left|center_vertical"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:paddingLeft="25dp"
                android:textSize="16dp"
                android:inputType="numberDecimal"
                android:editable="false"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/edt_border_transprtant_rect"
                android:layout_alignParentTop="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvrcvdtotalwt"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="fill_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:gravity="left|center_vertical"
                android:layout_gravity="center_vertical"
                android:text="Total weight"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#008000"/>

            <EditText
                android:id="@+id/edt_saletotalwt"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="35dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:hint="Total weight"
                android:gravity="left|center_vertical"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:paddingLeft="25dp"
                android:textSize="16dp"
                android:inputType="numberDecimal"
                android:editable="false"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/edt_border_transprtant_rect"
                android:layout_alignParentTop="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvrcvdrate"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="fill_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:gravity="left|center_vertical"
                android:layout_gravity="center_vertical"
                android:text="Rate"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#008000"/>

            <EditText
                android:id="@+id/edt_salerate"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="35dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:hint="Rate"
                android:gravity="left|center_vertical"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:paddingLeft="25dp"
                android:textSize="16dp"
                android:inputType="numberDecimal"
                android:background="@drawable/edt_border_transprtant_rect"
                android:layout_alignParentTop="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvrcvdamt"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="fill_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:gravity="left|center_vertical"
                android:layout_gravity="center_vertical"
                android:text="Amount"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#008000"/>

            <EditText
                android:id="@+id/edt_saleamt"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="35dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:hint="Amount"
                android:gravity="left|center_vertical"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:paddingLeft="25dp"
                android:textSize="16dp"
                android:inputType="numberDecimal"
                android:editable="false"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/edt_border_transprtant_rect"
                android:layout_alignParentTop="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvrcvdotherchg"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="fill_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:gravity="left|center_vertical"
                android:layout_gravity="center_vertical"
                android:text="Other charges"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#008000"/>

            <EditText
                android:id="@+id/edt_saleoc"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="35dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:hint="other charges"
                android:gravity="left|center_vertical"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:paddingLeft="25dp"
                android:textSize="16dp"
                android:inputType="numberDecimal"
                android:editable="false"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/edt_border_transprtant_rect"
                android:layout_alignParentTop="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvrcvdtotalamt"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:layout_height="fill_parent"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="2dp"
                android:gravity="left|center_vertical"
                android:layout_gravity="center_vertical"
                android:text="Total amount"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="#008000"/>

            <EditText
                android:id="@+id/edt_saletotalamt"
                android:layout_width="0dp"
                android:layout_weight="0.6"
                android:layout_height="35dp"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/darker_gray"
                android:hint="Total"
                android:gravity="left|center_vertical"
                android:layout_gravity="center_vertical"
                android:padding="5dp"
                android:paddingLeft="25dp"
                android:textSize="16dp"
                android:inputType="numberDecimal"
                android:editable="false"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:background="@drawable/edt_border_transprtant_rect"
                android:layout_alignParentTop="true" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <Button
                android:id="@+id/btnsalenewitem"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginRight="5dp"

                android:layout_weight="0.5"
                android:background="@drawable/edt_border_blue"
                android:elevation="1dp"

                android:text="New Item"
                android:textColor="#fff" />

            <Button
                android:id="@+id/btnsalesave"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="35dp"

                android:layout_marginLeft="5dp"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:background="@drawable/edt_border_blue"

                android:text="Save"
                android:elevation="1dp" />
        </LinearLayout>




    </LinearLayout>
</ScrollView>
