<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/edt_border_transprtant_white">

    <TextView
        android:id="@+id/edt_mob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textColorHint="@android:color/darker_gray"
        android:text="Search by Rating"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="20dp"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/llrate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_margin="2dp"
            android:background="@drawable/edt_border_transprtant_white"
            android:weightSum="1">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="left|center_vertical"
                android:layout_weight="0.2">
            </ImageView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="left|center_vertical"
                android:layout_weight="0.8"
                android:text="All"
                android:textSize="20dp"
                >
            </TextView>
        </LinearLayout>

    <LinearLayout
        android:id="@+id/llrate1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_margin="2dp"
        android:background="@drawable/edt_border_transprtant_white"
        android:weightSum="1">
        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:layout_weight="0.2"
            android:src="@drawable/rate1">
        </ImageView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            android:gravity="left|center_vertical"
            android:layout_weight="0.8"
            android:text="(1.0) Prompt"
            android:textSize="20dp"
            >
        </TextView>
    </LinearLayout>
        <LinearLayout
            android:id="@+id/llrate2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_margin="2dp"
            android:background="@drawable/edt_border_transprtant_white"
            android:weightSum="1">
            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="left|center_vertical"
                android:layout_weight="0.2"
                android:src="@drawable/rate2">
            </ImageView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="left|center_vertical"
                android:layout_weight="0.8"
                android:text="(2.0) Late"
                android:textSize="20dp"
                >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llrate3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_margin="2dp"
            android:background="@drawable/edt_border_transprtant_white"
            android:weightSum="1">
            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="left|center_vertical"
                android:layout_weight="0.2"
                android:src="@drawable/rate3">
            </ImageView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="left|center_vertical"
                android:layout_weight="0.8"
                android:text="(3.0) Too Late"
                android:textSize="20dp"
                >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llrate4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_margin="2dp"
            android:background="@drawable/edt_border_transprtant_white"
            android:weightSum="1">
            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="left|center_vertical"
                android:layout_weight="0.2"
                android:src="@drawable/rate4">
            </ImageView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="left|center_vertical"
                android:layout_weight="0.8"
                android:text="(4.0) Delayed"
                android:textSize="20dp"
                >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llrate5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_margin="2dp"
            android:background="@drawable/edt_border_transprtant_white"
            android:weightSum="1">
            <ImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="left|center_vertical"
                android:layout_weight="0.2"
                android:src="@drawable/rate5">
            </ImageView>
            <TextView
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="left|center_vertical"
                android:layout_weight="0.8"
                android:text="(5.0) Too Delayed"
                android:textSize="20dp"
                >
            </TextView>
        </LinearLayout>

    </LinearLayout>
