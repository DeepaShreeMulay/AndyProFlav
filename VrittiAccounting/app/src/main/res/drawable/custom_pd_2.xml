<?xml version="1.0" encoding="UTF-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:id="@android:id/background">
        <shape>
            <padding
                android:bottom="1dip"
                android:top="1dip"
                android:left="1dip"
                android:right="1dip"/>
            <corners
                android:radius="3dip" />
            <gradient
                android:startColor="#2a2b2f"
                android:centerColor="#2a2b2f"
                android:endColor="#2a2b2f"
                android:centerY="0.50"
                android:angle="270" />
        </shape>
    </item>
    <item
        android:id="@android:id/progress">
        <clip>
            <shape>
                <corners
                    android:radius="3dip" />
                <gradient
                    android:startColor="#AEEA00"
                    android:endColor="#C6FF00"
                    android:angle="90" />
            </shape>
        </clip>
    </item>
</layer-list>